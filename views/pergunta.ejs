<%- include("partials/header")  %>
<%- include("partials/navbar")  %> 
<div class="container">
    <hr>
    <h1><%= pergunta.titulo %> </h1>
    <p><%= pergunta.descricao %></p>
    <hr>

    <form action="/responder" method="POST">
        <h3>Responda</h3>
        <label for="">Resposta:</label>
        <textarea name="corpo" id="corpo" cols="30" rows="5" class="form-control" placeholder="Digite dua resposta"></textarea>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>" e id="pergunta">  
        <br>
        <button class="btn btn-primary" type="submit">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% resposta.forEach(item => { %>
        <div class="card">
            <div class="card-body">
                <%= item.corpo %>  
            </div>
        </div><br>
    <% }) %>

</div>
<%- include("partials/footer")  %>
